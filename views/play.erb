<div class="flex_row_center" id="play_box">
  <div class="flex_col_center" id="player1_box">
    <h3><%= @game.player1.name %></h3>
    <div class="flex_row_center">
      <i class="fas fa-skull-crossbones"></i>
      <meter class="vertical" max="50" value="<%=@game.player1.health_points%>"></meter>
      <i class="fas fa-heartbeat animate__animated animate__pulse animate__infinite"></i>
    </div>
    <p><%= @game.player1.health_points %><span id="health_points"> HP</span></p>
  </div>
  <div class="flex_col_center" id="player2_box">
    <h3><%= @game.player2.name %></h3>
    <div class="flex_row_center">
      <i class="fas fa-heartbeat animate__animated animate__pulse animate__infinite"></i>
      <meter id="player2_meter" max="50" value="<%=@game.player2.health_points%>"></meter>
      <i class="fas fa-skull-crossbones"></i>
    </div>
    <p><%= @game.player2.health_points %><span id="health_points"> HP</span></p>
  </div>
</div>

<h4><%= @game.current_turn.name %>'s turn</h4>
<form action="/attack" method="post">
  <input type="submit" value="attack">
</form>

