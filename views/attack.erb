<% if @game.current_turn == @game.player1 %>
  <h3><%= @game.player1.name %> attacked <%= @game.player2.name%><br></h3>
<% else %>
  <h3><%= @game.player2.name %> attacked <%= @game.player1.name%><br></h3>
<% end %>


<form action="/switch-turns" method="post">
  <input type="submit" value="OK">
</form>